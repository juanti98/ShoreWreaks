<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AboutAs"
    tools:showIn="@layout/app_bar_about"
    android:background="@drawable/f31536531d4515021f43389ad4ae6e1d">


    <ImageButton
        android:id="@+id/imgb_lechu"
        android:layout_width="233dp"
        android:layout_height="243dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorAccent"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pregunta"
        app:srcCompat="@drawable/support" />

    <TextView
        android:id="@+id/tv_pregunta"
        android:layout_width="231dp"
        android:layout_height="69dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorBlanco"
        android:text="Pincha a Lechu para hablar"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_desarrollador1"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="36dp"
        android:text="Desarrolladores:"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgb_lechu"
        android:background="@color/colorBlanco"/>

    <TextView
        android:id="@+id/tv_desarrollador2"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="44dp"
        android:background="@color/colorBlanco"
        android:text="Nerea Luján Pintado"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_desarrollador1" />

    <TextView
        android:id="@+id/tv_desarrollador3"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:layout_marginStart="84dp"
        android:background="@color/colorBlanco"
        android:text="Juan Torres Íñiguez"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desarrollador2" />

    <TextView
        android:id="@+id/tv_desarrollador4"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:layout_marginStart="84dp"
        android:background="@color/colorBlanco"
        android:text="Iván Hernández Gómez"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desarrollador3" />

</android.support.constraint.ConstraintLayout>