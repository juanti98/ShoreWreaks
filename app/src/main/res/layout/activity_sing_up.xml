<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/aa" />

    <LinearLayout
        android:id="@+id/keysLayout"
        style="@style/AuthFieldContainer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="168dp"
        android:alpha="0.9">

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_alignParentLeft="true"
            android:hint="Username"
            android:textColorHint="#6400838f"
            android:textColorLink="@android:color/background_dark"
            android:textSize="17sp"
            tools:focusable="false">

            <requestFocus />
        </EditText>


        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/subtitle"
            android:layout_alignParentLeft="true"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/focused_purple_button"
            android:textColorLink="@android:color/holo_blue_bright"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle"
            android:layout_alignParentLeft="true"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/focused_purple_button"
            android:textColorLink="@color/background_purple"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnSingUp"
            style="@style/AuthButton"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="14dp"
            android:text="@string/signup_button_label"
            android:textColor="@color/apptheme_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/AuthButton"

            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:background="@color/colorPrimaryDark"
            android:text="@string/cancel_button_label"
            android:textColor="@color/apptheme_color"
            android:textSize="15sp" />


        <!---->

    </LinearLayout>

    <ImageView
        android:id="@+id/imgGoogle"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="439dp"
        app:srcCompat="@drawable/search3" />

    <ImageView
        android:id="@+id/imgFacebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="239dp"
        android:layout_marginTop="444dp"
        android:visibility="visible"
        app:srcCompat="@drawable/facebook" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.google.android.gms.common.SignInButton>
</RelativeLayout>
